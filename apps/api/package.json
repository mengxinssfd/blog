{
  "name": "@apps/api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "-prebuild": "rimraf ./dist",
    "api:env": "docker-compose -f docker-compose.env.yml up -d",
    "build": "nest build -p tsconfig.build.json --webpack && esno scripts/build.ts",
    "postbuild": "esno scripts/build.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch -p ./tsconfig.json",
    "start:dev:hmr": "cross-env NODE_ENV=development nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand --detectOpenHandles --forceExit",
    "check:deps": "ncu",
    "check:ts": "tsc --noEmit -p ./tsconfig.json",
    "postinstall": "tsx ../../scripts/create-tmp-conf.ts"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@mxssfd/nest-puppeteer": "^1.0.0",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.4.1",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.1",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/throttler": "^4.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "@tool-pack/basic": "^0.8.1",
    "ali-oss": "^6.17.1",
    "axios": "^1.4.0",
    "bowser": "^2.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "ip2region": "^2.3.0",
    "log4js": "^6.9.1",
    "markdown-it": "^13.0.1",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-github-toc": "^3.2.4",
    "markdown-it-task-lists": "^2.1.1",
    "marked": "^4.3.0",
    "mysql2": "^3.3.1",
    "nodemailer": "^6.9.2",
    "openai": "^3.2.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "puppeteer": "^19.11.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "stacktrace-js": "^2.0.2",
    "swagger-ui-express": "^4.6.3",
    "text-censor": "^1.0.2",
    "typeorm": "^0.3.16"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.1",
    "@types/ali-oss": "^6.16.8",
    "@types/express": "^4.17.17",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-attrs": "^4.1.0",
    "@types/marked": "^4.3.1",
    "@types/node": "20.2.5",
    "@types/nodemailer": "^6.4.8",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/puppeteer": "^7.0.4",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "npm-check-updates": "^16.10.12",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*?)$": "<rootDir>/$1",
      "^@config/(.*?)$": "<rootDir>/../config/$1",
      "^@blog/([^/]*?)((/.*)?)$": "<rootDir>/../../../packages/$1/src$2"
    }
  }
}
